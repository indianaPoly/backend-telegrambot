{
    "compilerOptions": {
        "strict": true,
        "allowJs": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "ES5",
        "moduleResolution": "Node",
        "outDir": "./dist",
        "rootDir": "./src",
        "allowImportingTsExtensions": true,
        "noEmit": true
    },
    "include": ["src/**/*.ts", "src/**/*.js"]
}
